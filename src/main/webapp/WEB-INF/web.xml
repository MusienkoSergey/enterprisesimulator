<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
           version="3.0">

    <welcome-file-list>
        <welcome-file>index</welcome-file>
    </welcome-file-list>

    <filter>
        <filter-name>NavFilter</filter-name>
        <filter-class>ua.ck.codenvy.simulator.filter.MyFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>NavFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <listener>
        <listener-class>ua.ck.codenvy.simulator.servlet.AppListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>ua.ck.codenvy.simulator.servlet.IndexServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>generator</servlet-name>
        <servlet-class>ua.ck.codenvy.simulator.servlet.GeneratorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>employees</servlet-name>
        <servlet-class>ua.ck.codenvy.simulator.servlet.EmployeesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreatorGenerator</servlet-name>
        <servlet-class>ua.ck.codenvy.simulator.server.CreatorGeneratorImpl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DbManager</servlet-name>
        <servlet-class>ua.ck.codenvy.simulator.server.DbManagerImpl</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>generator</servlet-name>
        <url-pattern>/generator</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>employees</servlet-name>
        <url-pattern>/employees</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CreatorGenerator</servlet-name>
        <url-pattern>/ua.ck.codenvy.simulator.GeneratorEmployees/creatorGenerator</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DbManager</servlet-name>
        <url-pattern>/ua.ck.codenvy.simulator.ManagementEmployees/dbManager</url-pattern>
    </servlet-mapping>

    <error-page>
        <error-code>404</error-code>
        <location>/error404.jsp</location>
    </error-page>

</web-app>
